<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wenjing.seckill.db.dao.SeckillUserMapper">
    <select id="getUserById" resultType="com.wenjing.seckill.db.po.SeckillUser">
        select * from seckill_user where id = #{id}
    </select>
    <insert id="addUser" >
        insert into seckill_user(id,user_name,address,phone)
        values(#{id},#{userName}, #{address}, #{phone})
    </insert>
    <update id="updateUser" >
        update seckill_user
        set user_name=#{userName}, address=#{address}, phone=#{phone} where id=#{id}
    </update>
    <delete id="deleteUser" >
        delete from seckill_user where id=#{id}
    </delete>
</mapper>